                                @Html.Action("BagCart", "ShoppingCart")
                                <div class="dropdown-content">
                                    @Html.Action("ShowToCartNavBar", "ShoppingCart")
                                </div>
                            </div>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        
                        <li style="margin-right:15px">@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </nav>
        </header>
        <div class="row">
            <div class="col-sm-3">
                <section style="background-color:darkred;color:white" class="category">
                    <strong style="padding:20px" class="rounded">CATEGORIES</strong>
                    <div class="list-group">
                        <a href="@Url.Action("ProductByCategory", "Products")?productCategory=Laptop" class="list-group-item">Laptop</a>
