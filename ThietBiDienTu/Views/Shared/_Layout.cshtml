                        <a href="@Url.Action("ProductByCategory", "Products")?productCategory=Chuột" class="list-group-item">Chuột</a>
                        <a href="@Url.Action("ProductByCategory", "Products")?productCategory=Tai nghe" class="list-group-item">Tai nghe</a>
                    </div>
                </section>
            </div>
            <div class="col-sm-9">
                <section class="info">
                    @RenderBody()
                </section>
            </div>
        </div>
