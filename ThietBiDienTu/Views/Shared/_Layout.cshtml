                    </div>
                    <div class="item">
                        <img style="width:1200px;height:500px" src="~/Images/poster4.jpg" alt="">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <nav style="background-color:darkred;color:white" class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a style="color:white" class="navbar-brand" href="/Home/Index">Store</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a style="color:white" href="/Home/Index">HOME</a></li>
                        <li><a style="color:white" href="/Products/ShowProduct">PRODUCT</a></li>
                        <li><a style="color:white" href="/Home/Contact">CONTACT US</a></li>
                        <li style="padding-right:15px">
