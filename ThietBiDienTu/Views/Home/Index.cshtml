@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<style>

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: 10px;
        text-align: center;
        float: left;
        background-color: white;
        border: outset;
        color: black;
        width: 250px;
    }

        .card p {
            color: black;
        }

        .card img {
            width: 100%;
            min-height: 211px;
            min-width: 196px;
        }
        .card h2{
            font-size:large;
        }

    .product-title {
        margin: 0;
        font-size: 22px;
        background: darkred;
        padding: 10px 20px;
        color: #fff;
        min-width: 100%;
        display: inline-block;
    }
</style>


@{
    int counter = 0;
}
<h2 class="product-title">Top sản phẩm bán chạy</h2>
@foreach (var item in ViewBag.Hot)
{
    counter++;
    if (counter <= 3)
    {
        <div class="card clearfix">
            <img src="~/Images/@item.ProductImage" alt="ProductImage">            
                <h2 style="height:50px">@item.ProductName</h2>            
            <p class="title">Giá: @item.ProductPrice</p>
            <div class="info">
                <div class="separator clear-left">
                    <p class="btn-add">
                        <i class="fa fa-shopping-cart"></i><a href="/ShoppingCart/AddToCart/@item.ProductID" class="hidden-sm">  Add to cart</a>
                    </p>
                    <p class="btn-details">
                        <i class="fa fa-list"></i>
                        <a href="/Products/Details/@item.ProductID">Details</a>
                    </p>
                </div>
            </div>
        </div>
    }

}

