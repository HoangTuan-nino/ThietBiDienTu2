@model IEnumerable<ThietBiDienTu.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPriceSale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantitySale)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPriceSale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantitySale)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }, new { @class = "btn btn-danger", Style = "width:100px" })
                @Html.ActionLink("Details", "Details", new { id = item.OrderDetailID }, new { @class = "btn btn-warning", Style = "width:100px" })
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderDetailID }, new { @class = "btn btn-success", Style = "width:100px" })
            </td>
        </tr>
    }

</table>
