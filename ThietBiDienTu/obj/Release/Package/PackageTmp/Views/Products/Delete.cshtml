@model ThietBiDienTu.Models.Product

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    h3 {
        color: red;
        text-align: center;
    }



    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
    }

    .title {
        color: grey;
        font-size: 18px;
    }
</style>

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div align="center" class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
}
<div>
    <hr />
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    <div class="card">
        <img src="~/Images/@Html.DisplayFor(model => model.ProductImage)" alt="QuanLy" style="width:100%">
        <h2 style="height:auto">Tên sản phẩm : @Html.DisplayFor(model => model.ProductName)</h2>
        <p>Loại sản phẩm : @Html.DisplayFor(model => model.Category.CategoryName)</p>
        <p>Tên NSX: @Html.DisplayFor(model => model.Producer.ProducerName)</p>
        <p>Tình trạng : @Html.DisplayFor(model => model.Status)</p>
        <hr style="height:2px;border-width:0;color:gray;background-color:gray">
        <h2>Giá : @Html.DisplayFor(model => model.ProductPrice)</h2>
    </div>
</div>
