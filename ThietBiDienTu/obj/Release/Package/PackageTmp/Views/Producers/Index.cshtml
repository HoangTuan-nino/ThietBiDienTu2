@model IEnumerable<ThietBiDienTu.Models.Producer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            Tên NSX
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerPhone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProducerID }, new { @class = "btn btn-danger", Style = "width:100px" })
                @Html.ActionLink("Details", "Details", new { id = item.ProducerID }, new { @class = "btn btn-warning", Style = "width:100px" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ProducerID }, new { @class = "btn btn-success", Style = "width:100px" })
            </td>
        </tr>
    }

</table>
