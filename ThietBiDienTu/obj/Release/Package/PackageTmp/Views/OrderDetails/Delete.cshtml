@model ThietBiDienTu.Models.OrderDetail

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    h3 {
        color: red;
        text-align: center;
    }



    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
    }

    .title {
        color: grey;
        font-size: 18px;
    }
</style>

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div align="center" class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
}
<div>
    <hr />
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    <div class="card">
        <h2 style="height:auto">UserID : @Html.DisplayFor(model => model.Order.UserId)</h2>
        <p>Tên sản phẩm : @Html.DisplayFor(model => model.Product.ProductName)</p>
        <p>Giá : @Html.DisplayFor(model => model.UnitPriceSale)</p>
        <p>Số lượng : @Html.DisplayFor(model => model.QuantitySale)</p>
        <hr style="height:2px;border-width:0;color:gray;background-color:gray">
    </div>
</div>
